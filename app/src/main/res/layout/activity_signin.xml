<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="#08963a"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WELCOME TO OUR APP"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up or Sign in to\nenjoy your time."
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="48dp"
                android:scaleType="fitCenter"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/boy"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/edit_text_border"
            android:id="@+id/EmailRelativeLayout"
            android:layout_height="60dp"
            android:layout_width="390dp"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/editUsername"
                android:layout_height="60dp"
                android:layout_width="390dp"
                android:paddingStart="30dp"
                android:inputType="textPassword"
                android:layout_marginStart="10dp"
                android:hint="Username"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/white"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/baseline_mail_lock_24"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/edit_text_border"
            android:id="@+id/passwordRelativeLayout"
            android:layout_height="60dp"
            android:layout_width="390dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_height="60dp"
                android:layout_width="390dp"
                android:paddingStart="30dp"
                android:inputType="textPassword"
                android:layout_marginStart="10dp"
                android:hint="Password"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/white"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/baseline_lock_person_24"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/btn_little_rounded"
                android:layout_width="150dp"
                android:id="@+id/btnSignIn"
                android:layout_height="50dp"
                android:layout_marginEnd="40dp"
                android:text="SIGN IN"
                android:textSize="18sp"/>

            <Button
                android:background="@drawable/btn_little_rounded"
                android:layout_width="150dp"
                android:id="@+id/btnSignUp"
                android:layout_height="50dp"
                android:text="SIGN UP"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="#7a7d7b"
            android:textSize="18sp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="-------------------------------- OR --------------------------------"/>

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/GoogleRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btnGoogleLogin"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:text="LOGIN WITH GOOGLE"
                android:backgroundTint="#1d97de"
                android:background="@drawable/btn_little_rounded"
                android:textSize="18sp">
            </Button>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_marginTop="110dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="17dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cambodia"
                android:layout_marginEnd="70dp"/>

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Library Ltd."
                android:layout_marginEnd="60dp"/>

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tos Ran"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>